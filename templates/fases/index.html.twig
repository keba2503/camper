{% extends 'base.html.twig' %}

{% block title %}Fases De la camperización{% endblock %}

{% block body %}
<h2 class="mb-5">
{{ 'Fases de la camperización'|trans }}
</h2>

{% for row in fases|batch(4) %}
<div class="row">
    {% for fase in row %}
        <div class="col-12 col-md-6 col-lg-3 mb-4">
            <div class="card border shadow lift">
                <div class="card-body">
                    <div class="card-title">
                        <h4 class="font-weight-light">
                            {{ fase }}
                        </h4>
                    </div>

                    <a href="{{ path('fases', { slug: fase.slug }) }}"
                       class="btn btn-sm btn-primary stretched-link">
                        {{ 'View'|trans }}
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endfor %}
{% endblock %}